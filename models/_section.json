{
  "definitions": [
    {
      "title": "Section",
      "id": "section",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/section/v1/section",
            "template": {
              "model": "section",
              "filter": "section"
            }
          }
        }
      }
    },
    {
      "title": "Columns Section",
      "id": "columns-section",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/section/v1/section",
            "template": {
              "model": "columns-section",
              "filter": "account-section"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "section",
      "fields": [
        {
          "component": "text",
          "name": "name",
          "label": "Section Name",
          "description": "The label shown for this section in the Content Tree"
        },
        {
          "component": "text",
          "name": "id",
          "label": "Section ID",
          "description": "Unique ID for this section (for anchor links and scrolling). Use lowercase letters, numbers, and hyphens only.",
          "valueType": "string"
        },
        {
          "component": "text",
          "name": "marquee",
          "label": "Marquee Text",
          "description": "The text shown for this section in a marquee scroller"
        },
        {
          "component": "multiselect",
          "name": "style",
          "label": "Style",
          "options": [
            {
              "name": "Full Width",
              "value": "full-width"
            },
            {
              "name": "Narrow Width",
              "value": "narrow-width"
            },
            {
              "name": "Blog Width",
              "value": "blog-width"
            },
            {
              "name": "Padded",
              "value": "padded-vertical"
            },
            {
              "name": "Center Copy",
              "value": "center-copy"
            },
            {
              "name": "Two Column",
              "value": "two-column"
            }
            ,
            {
              "name": "rounder borders",
              "value": "section-rounded-borders"
            }
            ,
            {
              "name": "Box Shadow",
              "value": "section-shadow"
            },
            {
              "name": "Checkmark Lists",
              "value": "checkmark-lists"
            }
          ]
        },
        {
          "component": "select",
          "name": "checkmarkColor",
          "label": "Checkmark Color",
          "options": [
            {
              "name": "Gray",
              "value": "gray"
            },
            {
              "name": "Blue (Midnight Sky)",
              "value": "blue"
            },
            {
              "name": "Brand Color (Citrus Pop)",
              "value": "brand"
            }
          ],
          "condition": {
            "===": [
              {
                "in": [
                  "checkmark-lists",
                  {
                    "var": "style"
                  }
                ]
              },
              true
            ]
          },
          "description": "Choose the color for checkmarks when Checkmark Lists style is selected"
        },
        {
          "component": "select",
          "name": "background",
          "label": "Background",
          "options": [
            {
              "name": "Midnight Sky",
              "value": "--brand-color-midnight-sky"
            },
            {
              "name": "Citrus Pop",
              "value": "--brand-color-citrus-pop"
            },
            {
              "name": "Morning Mist",
              "value": "--brand-color-morning-mist"
            },
            {
              "name": "Mist",
              "value": "--brand-color-mist"
            },
            {
              "name": "Aqua Bliss",
              "value": "--brand-color-aqua-bliss"
            },
            {
              "name": "Iris Buzz",
              "value": "--brand-color-iris-buzz"
            },
            {
              "name": "Sunset Sizzle",
              "value": "--brand-color-sunset-sizzle"
            },
            {
              "name": "Cotton",
              "value": "--brand-color-cotton"
            },
            {
              "name": "Linen",
              "value": "--brand-color-linen"
            },
            {
              "name": "Black",
              "value": "--brand-color-black"
            },
            {
              "name": "White",
              "value": "--brand-color-white"
            },
            {
              "name": "Transparent",
              "value": "transparent"
            }
          ]
        },
        {
          "component": "reference",
          "valueType": "string",
          "name": "backgroundImage",
          "label": "Background Image",
          "multi": false,
          "description": "Background image for the section"
        },
        {
          "component": "boolean",
          "name": "backgroundOverlay",
          "label": "Background Overlay?",
          "valueType": "boolean",
          "description": "Enable background overlay"
        }
      ]
    },
    {
      "id": "columns-section",
      "fields": [
        {
          "component": "text",
          "name": "name",
          "label": "Section Name",
          "description": "The label shown for this section in the Content Tree"
        },
        {
          "component": "text",
          "name": "column-width",
          "label": "Column Width",
          "value": "50%"
        },
        {
          "component": "select",
          "name": "gap",
          "label": "Gap",
          "options": [
            {
              "name": "Big",
              "value": "Big"
            },
            {
              "name": "Small",
              "value": "Small"
            }
          ]
        }
      ]
    }
  ],
